<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smsparking.parkman"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="23" />
    <!-- Network State -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo72x72"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.smsparking.parkman.main.LoginActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>          
        </activity>
        <activity
            android:name="com.smsparking.parkman.ui.SiteListActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.smsparking.parkman.ui.ParkedVehiclesActivity"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>